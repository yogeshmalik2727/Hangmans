
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
   xmlns:tools = "http://schemas.android.com/tools" 
   android:layout_width="match_parent"
   android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
   android:paddingRight = "@dimen/activity_horizontal_margin"
   android:paddingTop = "@dimen/activity_vertical_margin"
   android:paddingBottom = "@dimen/activity_vertical_margin" 
    android:orientation="vertical">
   
   <TextView android:text = "Login" android:layout_width="match_parent"
      android:layout_height = "wrap_content"
      
      android:id = "@+id/textview"
      android:textSize = "35dp"
      android:textColor = "#ff7aff24"
       />
      
    <TextView android:text = " " android:layout_width="match_parent"
      android:layout_height = "wrap_content"
      android:textSize = "15dp"
       />
   <Button
      android:layout_width="match_parent"
      android:layout_height = "wrap_content"
        android:background="@drawable/rounded"
      android:text="Play Game"
      android:id="@+id/btnStart"
     />
    <TextView android:text = " " android:layout_width="match_parent"
      android:layout_height = "wrap_content"
      android:textSize = "15dp"
       />
    <Button
      android:layout_width="match_parent"
      android:layout_height = "wrap_content"        
      android:text="Top Winner Profile"
      android:id="@+id/btnWinners"
        android:background="@drawable/rounded"
      />
    
    <TextView android:text = " " android:layout_width="match_parent"
      android:layout_height = "wrap_content"
      android:textSize = "15dp"
       />
    <Button
      android:layout_width="match_parent"
      android:layout_height = "wrap_content"        
      android:text="Top Loser Profile"
      android:id="@+id/btnLosers"
        android:background="@drawable/rounded"
      />
    
    <TextView android:text = " " android:layout_width="match_parent"
      android:layout_height = "wrap_content"
      android:textSize = "15dp"
       />
    
    <Button
      android:layout_width="match_parent"
      android:layout_height = "wrap_content"
      android:text="Exit"
      android:id="@+id/btnExit"
        android:background="@drawable/rounded"
      />

    <TextView android:text = " " android:layout_width="match_parent"
      android:layout_height = "wrap_content"
      android:textSize = "15dp"
       />
</LinearLayout>